<launch>
  <arg name="map_file" default="$(find chibi_challenge)/mapdata/map_d1.yaml"/>
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" output="screen"/>

  <node pkg="chibi_challenge" name="mcl" type="mcl" output="screen">
    <param name="N" value="500"/>
    <param name="alpha1" value="0.8"/>
    <param name="alpha2" value="0.8"/>
    <param name="alpha3" value="0.3"/>
    <param name="alpha4" value="0.3"/>
    <param name="max_range" value="20"/>
    <param name="z_hit" value="0.5"/>
    <param name="z_random" value="0.5"/>
    <param name="z_max" value="0.05"/>
    <param name="sigma_hit" value="100"/>
    <param name="init_pose_x" value="-3.0"/>
    <param name="init_pose_y" value="-3.0"/>
    <param name="init_pose_yaw" value="3.14"/>
    <param name="init_pose_x_cov" value="1.0"/>
    <param name="init_pose_y_cov" value="1.0"/>
    <param name="init_pose_yaw_cov" value="0.3"/>
  </node>

</launch>
